{
  "name": "@codewithdan/observable-store",
  "version": "2.2.3",
  "author": "Dan Wahlin",
  "description": "Observable Store provides a simple way to store and retrieve state in Angular, React, Vue.js and other front-end applications.",
  "license": "MIT",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "repository": {
    "url": "https://github.com/danwahlin/observable-store"
  },
  "keywords": [
    "store",
    "state management",
    "Angular store",
    "React store",
    "Vue.js store",
    "state store",
    "JavaScript store",
    "Front-end store"
  ],
  "scripts": {
    "tsc": "tsc",
    "build": "rm -rf ./dist && tsc --build ./tsconfig.json",
    "build:w": "tsc  --build ./tsconfig.json --watch",
    "test": "jasmine-ts --project ./spec/tsconfig.json --config=./spec/jasmine.json",
    "test:w": "nodemon --ext ts --exec 'jasmine-ts --project ./spec/tsconfig.json --config=./spec/jasmine.json'"
  },
  "peerDependencies": {
    "rxjs": "^6.4.0"
  },
  "devDependencies": {
    "@types/jasmine": "^3.4.4",
    "jasmine": "^3.5.0",
    "jasmine-spec-reporter": "^4.2.1",
    "jasmine-ts": "^0.3.0",
    "ts-node": ">=3.2.0 <8",
    "typescript": "3.6.4",
    "rxjs": "^6.4.0"
  }
}
